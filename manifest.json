{
  "manifest_version": 3,
  "name": "AvionTrade Hub",
  "description": "AvionTrade Hub helps you track and analyze your Web App trades",
  "version": "0.1",
  "host_permissions": [
    "*://*.ea.com/*",
    "*://*.easports.com/*",
    "http://localhost:4000/*"
  ],
  "permissions": ["storage", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.ea.com/*", "*://*.easports.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["inject.js"],
      "matches": ["*://*.ea.com/*", "*://*.easports.com/*"]
    }
  ]
}
